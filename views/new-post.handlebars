<div class="card">
    <h3 class="card-header">Create New Post</h3>
  <form class="new-post-form card-body">
    <div>
      <label for="post-title" class="form-label">Title</label>
      <input type="text" id="post-title" name="post-title" class="form-input" />
    </div>
    <div>
      <label for="post-url" class="form-label">Content</label>
      <input id="post-url" name="post-url" class="form-input" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</div>

<script src="/javascript/add-post.js"></script>